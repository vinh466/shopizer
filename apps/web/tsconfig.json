{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "@styled/typescript-styled-plugin",
        "tags": ["styled", "css", "sty", "style"]
      }
    ],
    // "allowImportingTsExtensions": true,
    "paths": {
      "@shopizer/atoms": ["src/components/atoms/index.ts"],
      "@shopizer/molecules": ["src/components/molecules/index.ts"],
      "@shopizer/organisms": ["src/components/organisms/index.ts"],
      "@shopizer/templates": ["src/components/templates/index.ts"],
      "@shopizer/constants": ["src/constants/index.ts"],
      "@shopizer/configs/*": ["src/configs/*"],
      "@shopizer/hooks": ["src/hooks/index.ts"],
      "@shopizer/utils/*": ["src/utils/*"],
      "@shopizer/enums/*": ["src/enums/*"],
      "@shopizer/apis/*": ["src/apis/*"],
      "@shopizer/stores/*": ["src/stores/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
